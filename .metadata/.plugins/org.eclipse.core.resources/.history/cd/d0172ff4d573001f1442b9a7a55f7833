package assignment1;

import java.util.Scanner;
import java.util.Random;

public class Crossan_Malachy {
    public static void main(String[] args) {
        Random random = new Random(); // Initializes the random number object
        Scanner scanner = new Scanner(System.in); // Initializes the Scanner object

        int receiptNumber = 1000 + random.nextInt(1000);
        String[] months = {"January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"};
        String month = months[random.nextInt(12)];
        int day = 1 + random.nextInt(28);
        int year = 1900 + random.nextInt(200);

        System.out.println("******************************");
        System.out.println("**Reciept for Malachy's Store**");
        System.out.println("******************************");
        System.out.printf("receipt number      %d%n", receiptNumber);
        System.out.printf("%s %d %d%n", month, day, year);

        int itemCount = 0;
        double totalSum = 0.0;

        while (true) {
            System.out.print("Item: ");
            String itemName = scanner.nextLine();
            if (itemName.equals("DONE")) break;

            itemCount++;
            System.out.print("\033[FPrice: ");
            double price = scanner.nextDouble();
            scanner.nextLine();  // Consume newline

            double taxRate = (itemName.equals("food") || itemName.equals("Food") ) ? 0 : 0.3;
            double finalPrice = price + (price * taxRate);
            finalPrice = Math.round(finalPrice);

            itemName = itemName.substring(0, 1).toUpperCase() + itemName.substring(1);
            System.out.printf("item number %d %s %.1f%n", itemCount, itemName, finalPrice);

            totalSum += finalPrice;
        }

        System.out.printf("%d items      total %.1f%n", itemCount, totalSum);
        System.out.println("******************************");
    }
}
